{
"version": "2.0.0",
"tasks": [
    {
    "label": "Run Python Script",
    "type": "shell",
    "command": "cls && python ${file}",
    "windows": {
        "command": "cls && python ${file}"
    },
    "linux": {
        "command": "clear && python3 ${file}"
    },
    "osx": {
        "command": "clear && python3 ${file}"
    },
    "problemMatcher": [],
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
    }
    },
